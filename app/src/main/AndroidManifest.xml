<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.medina.diplomskirad">

    <!-- To access APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="true" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_tooth"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegistracijaActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".TerminActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MeniActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ProfilActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".UrediProfilActivity"/>
        <activity android:name=".HistorijaActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MjestoFragmentActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".PregledMjestoActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".PorukaActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>