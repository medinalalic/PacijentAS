<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:background="@drawable/bc"
    tools:context=".RegistracijaActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtRegNaslov"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registracija"
                android:padding="10dp"
                android:layout_centerHorizontal="true"
                android:textSize="20dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtPrezime"
                android:layout_below="@id/txtRegNaslov"
                android:hint="Unesite prezime"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"


                android:padding="12dp"
                android:layout_marginBottom="5dp"
                android:ems="10"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:textColorHint="#fff"
                android:drawableLeft="@drawable/ic_person_white_24dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtIme"
                android:padding="12dp"
                android:layout_below="@+id/txtPrezime"
                android:hint="Unesite ime"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="5dp"
                android:ems="10"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:textColorHint="#fff"
                android:drawableLeft="@drawable/ic_person_white_24dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtEmail"
                android:padding="12dp"
                android:hint="Unesite email"
                android:layout_below="@+id/txtIme"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="5dp"
                android:ems="10"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:textColorHint="#fff"
                android:drawableLeft="@drawable/ic_email_black_24dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/txtAdresa"
                android:textSize="18sp"
                android:layout_below="@+id/txtEmail"
                android:hint="Unesite adresu"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"

                android:padding="12dp"
                android:layout_marginBottom="5dp"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:textColorHint="#fff"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:layout_below="@+id/txtAdresa"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/txtTelefon"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:hint="Unesite broj telefona"

                android:textSize="18sp"

                android:padding="12dp"
                android:layout_marginBottom="5dp"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:textColorHint="#fff"
                android:drawableLeft="@drawable/ic_call_black_24dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtPassword"
                android:hint="Unesite password"
                android:layout_below="@+id/txtLogin"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="5dp"
                android:inputType="textPassword"
                android:ems="10"
                android:drawablePadding="16dp"
                android:padding="16dp"
                android:textColorHint="#fff"
                android:background="@android:color/transparent"
                android:maxLines="1"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/ic_lock_white_24dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtUsername"
                android:padding="12dp"
                android:hint="Unesite username"
                android:layout_below="@+id/txtPassword"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="5dp"
                 android:ems="10"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:textColorHint="#fff"
                android:drawableLeft="@drawable/ic_person_white_24dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registruj se"
                android:layout_below="@+id/txtUsername"
                android:id="@+id/btnRegistracija"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textAllCaps="false"
                android:layout_gravity="center_horizontal|center"
                android:background="#fff"
                android:textStyle="normal"
                android:clickable="true"
                android:textSize="18sp"
                android:textColor="#f16f71"
                android:padding="16dp"
                android:layout_marginBottom="10dp"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
 </ScrollView>
</LinearLayout>



