<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:background="#89D2D8"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ocjeni_product_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ocjeni_product_productDetailImage"
            android:layout_width="100dp"
            android:layout_height="116dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="0dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ocjeni_product_productDetailImage"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ocjeni_product_nazivProizvoidaTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="50dp"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textSize="16dp" />


        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/ocjena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ocjeni_product_linearLayout"
        android:layout_marginLeft="10dp"

        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:visibility="invisible" />


    <SeekBar
        android:id="@+id/uslugaSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ocjena"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:max="5"
        android:textColor="@color/black"
        android:theme="@style/SeekBarColor"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/ocjeni_product_brojProizvodaseekBarTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/uslugaSeekBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/uslugaSeekBar"
        android:layout_below="@+id/uslugaSeekBar"

        android:layout_marginLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black"
        android:visibility="invisible" />

    <Button
        android:id="@+id/ocjeni_product_OcjeniBtn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ocjeni_product_brojProizvodaseekBarTxt"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:text="OCIJENI"

        android:textAllCaps="false"
        android:textColor="@color/black"
        android:visibility="invisible" />

</RelativeLayout>