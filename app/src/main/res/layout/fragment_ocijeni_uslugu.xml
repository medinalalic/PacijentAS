<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ocjeni_product_linearLayout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/ocjeni_product_productDetailImage"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/ocjeni_product_productDetailImage">

            <TextView
                android:id="@+id/ocjeni_product_nazivProizvoidaTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium" />



        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/ocjena"
        android:layout_below="@+id/ocjeni_product_linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="13dp"
        android:visibility="invisible"
        android:layout_marginBottom="10dp" />



    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uslugaSeekBar"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/ocjena"
        android:visibility="invisible"
        android:max="5"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/ocjeni_product_brojProizvodaseekBarTxt"
        android:layout_below="@+id/uslugaSeekBar"
        android:layout_alignParentLeft="true"
        android:visibility="invisible"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/uslugaSeekBar"
        android:layout_alignEnd="@+id/uslugaSeekBar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ocijeni"
        android:id="@+id/ocjeni_product_OcjeniBtn"
        android:layout_below="@+id/ocjeni_product_brojProizvodaseekBarTxt"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#f08b98"
        android:textAllCaps="false"

        android:visibility="invisible"
        android:textColor="#fff"/>

</RelativeLayout>